<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/galary_itemview"
    android:elevation="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/galary_cover"
            android:src="@drawable/album_default_cover_0"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="fitXY"/>

        <View
            android:id="@+id/galary_label"
            android:layout_below="@id/galary_cover"
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:background="@drawable/galary_theme_label_common_0"/>

        <TextView
            android:id="@+id/galary_title_tv"
            android:text="kong"
            android:textSize="14sp"
            android:layout_below="@id/galary_label"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/galary_item_time_iv"
            android:layout_below="@id/galary_title_tv"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:src="@drawable/galary_item_time_icon"
            android:layout_width="11dp"
            android:layout_height="11dp" />

        <TextView
            android:id="@+id/galary_date_tv"
            android:text="2017"
            android:textSize="11sp"
            android:layout_below="@id/galary_title_tv"
            android:layout_toRightOf="@id/galary_item_time_iv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/photo_sum_cover_tv"
            android:text="0"
            android:textSize="12sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>