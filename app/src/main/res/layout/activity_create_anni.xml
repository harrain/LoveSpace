<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f5d3d3"
    tools:context="com.example.lovespace.home.annversary.CreateAnniActivity">

    <include layout="@layout/titlebarthree"
        android:id="@+id/toolbar"/>

    <EditText
        android:id="@+id/aname_et"
        android:textSize="16sp"
        android:hint="输入纪念日名称"
        android:singleLine="true"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/date_picker"
        android:layout_marginTop="25dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/atime_icon"
            android:src="@drawable/galary_item_time_icon"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="选择日期"
            android:textSize="16sp"
            android:layout_toRightOf="@id/atime_icon"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>
